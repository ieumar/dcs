{% extends 'base.html.twig' %}
{% block stylesheets %}
{{parent()}}
<style type="text/css">
        
        .about-hero {
            background: linear-gradient(rgba(0,33,71,0.9), url('{{asset('asset/image/lab_bg.jpeg')}}'));
            background-image: url('{{asset('asset/image/lab_bg.jpeg')}}'), linear-gradient(rgba(0,33,71,0.9), rgba(0, 33, 71, 0.46));
            color: white;
            padding: 6rem 2rem;
            text-align: center;
            background-size: cover;
        }

        .timeline {
            max-width: 800px;
            margin: 3rem auto;
            padding: 2rem;
        }

        .timeline-item {
            display: flex;
            gap: 2rem;
            margin-bottom: 3rem;
        }

        .milestone-year {
            font-size: 1.5rem;
            color: #002147;
            min-width: 100px;
        }

        .stats-grid {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 2rem;
            text-align: center;
            margin: 4rem 0;
        }

        .stat-card {
            background: #f8f9fa;
            padding: 2rem;
            border-radius: 8px;
        }

        @media (max-width: 768px) {
            .stats-grid {
                grid-template-columns: 1fr;
            }
        }
    </style>
    {% endblock %}
    {% block body %}
    <section class="about-hero">
        <h1>Pioneering Computer Science Education Since 2016</h1>
        <p>Shaping the future of technology through innovation and excellence</p>
    </section>

    <div class="timeline">
        <div class="timeline-item">
            <div class="milestone-year">2016</div>
            <div>
                <h3>Department Founded</h3>
                <p>Established with initial focus on theoretical computing and software engineering</p>
            </div>
        </div>
        <!-- Add more timeline items -->
    </div>

    <div class="stats-grid">
        <div class="stat-card">
            <h2>1500+</h2>
            <p>Alumni Worldwide</p>
        </div>
        <div class="stat-card">
            <h2>97%</h2>
            <p>Graduation Rate</p>
        </div>
        <div class="stat-card">
            <h2>$15M</h2>
            <p>Annual Research Funding</p>
        </div>
    </div>

    <section class="mission-section" style="padding: 4rem 2rem; background: #f8f9fa;">
        <h2>Our Mission</h2>
        <p>To empower students with cutting-edge technical knowledge while fostering ethical responsibility in technology development...</p>
    </section>
    {% endblock %}