{% extends 'base.html.twig' %}
{% block stylesheets %}
{{parent()}}
<style type="text/css">
        .programs-hero {
            background: #002147;
            color: white;
            padding: 4rem 2rem;
            text-align: center;
        }

        .programs-container {
            max-width: 1200px;
            margin: 2rem auto;
            padding: 0 2rem;
        }

        .program-accordion {
            margin: 2rem 0;
        }

        .accordion-item {
            border: 1px solid #ddd;
            margin-bottom: 1rem;
            border-radius: 4px;
        }

        .accordion-header {
            padding: 1rem;
            background: #f8f9fa;
            cursor: pointer;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .accordion-content {
            padding: 1rem;
            display: none;
        }

        .course-list {
            columns: 2;
            margin: 1rem 0;
        }

        @media (max-width: 768px) {
            .course-list {
                columns: 1;
            }
        }
    </style>
    {% endblock %}
    {% block body %}
    <section class="programs-hero">
        <h1>Academic Programs</h1>
        <p>Shape your future with our rigorous, industry-aligned curriculum</p>
    </section>

    <div class="programs-container">
        <div class="program-accordion">
            <div class="accordion-item">
                <div class="accordion-header" onclick="toggleAccordion(this)">
                    <h3>Undergraduate Programs</h3>
                    <span>â–¼</span>
                </div>
                <div class="accordion-content">
                    <h4>B.S. in Computer Science</h4>
                    <div class="course-list">
                        <p>Core Courses:</p>
                        <ul>
                            <li>Data Structures & Algorithms</li>
                            <li>Computer Architecture</li>
                            <li>Operating Systems</li>
                            <!-- Add more courses -->
                        </ul>
                    </div>
                    <a href="#" class="apply-button">View Requirements</a>
                </div>
            </div>

            <!-- Add Graduate and PhD sections -->
        </div>

        <section style="margin: 4rem 0;">
            <h2>Research Opportunities</h2>
            <div class="research-cards">
                <!-- Add research opportunity cards -->
            </div>
        </section>
    </div>

{% endblock %}
{% block js_bottom %}
{{parent()}}
    <script>
        function toggleAccordion(header) {
            const content = header.nextElementSibling;
            content.style.display = content.style.display === 'block' ? 'none' : 'block';
        }
    </script>
{% endblock %}