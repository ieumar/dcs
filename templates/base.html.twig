<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block links %}{% endblock %}
        {% block stylesheets %}
            <style>
            * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Arial', sans-serif;
        }

        .nav-container {
            background: #002147; /* University navy blue */
            padding: 1rem 2rem;
            box-shadow: 0 2px 5px rgba(0,0,0,0.1);
        }

        .nav-menu {
            display: flex;
            justify-content: space-between;
            align-items: center;
            max-width: 1200px;
            margin: 0 auto;
        }

        .logo {
            color: white;
            font-size: 1.5rem;
            font-weight: bold;
            text-decoration: none;
        }

        .nav-links {
            display: flex;
            gap: 2rem;
            list-style: none;
        }

        .nav-links a {
            color: white;
            text-decoration: none;
            font-size: 1rem;
            transition: color 0.3s ease;
        }

        .nav-links a:hover {
            color: #FFD700; /* Gold hover effect */
            text-decoration: underline;
        }

        .mobile-menu-btn {
            display: none;
            background: none;
            border: none;
            color: white;
            font-size: 1.5rem;
            cursor: pointer;
        }

        @media (max-width: 768px) {
            .nav-links {
                display: none;
                width: 100%;
                flex-direction: column;
                position: absolute;
                top: 60px;
                left: 0;
                background: #002147;
                padding: 1rem 2rem;
            }

            .nav-links.active {
                display: flex;
            }

            .mobile-menu-btn {
                display: block;
            }
        }
        #body{
            border-style: solid;
            border-width: 1px;
            border-radius: 10px;
            border-color: skyblue;
            width: 70%;
            margin:auto;
            margin-top: 20px;
            margin-bottom: 20px;
            padding:20px;
            box-shadow: 2px 2px 4px skyblue;
            min-height: 800px;
        }
            </style>
        {% endblock %}
        {% block scripts_top %}{% endblock %}
        {% block js_top %}{% endblock %}
    </head>
    <body>
        {% block header %}
        <nav class="nav-container">
            <div class="nav-menu">
                <a href="#" class="logo">
                    <img src="{{asset('asset/image/logo.png')}}" alt="University Logo" height="40">
                </a>
                
                <ul class="nav-links">
                    <li><a href="{{path('home')}}">Home</a></li>
                    <li><a href="{{path('about')}}">About</a></li>
                    <li><a href="{{path('staff')}}">Staff</a></li>
                    <li><a href="{{path('academics')}}">Academics</a></li>
                    <li><a href="{{path('admissions')}}">Admissions</a></li>
                    <li><a href="{{path('contact')}}">Contact</a></li>
                    <li><a href="{{path('admin')}}">Admin</a></li>
                </ul>
                
                <button class="mobile-menu-btn" aria-label="Toggle navigation">
                    â˜°
                </button>
            </div>
        </nav>
        {% endblock %}
        <section id="body">
            {% block body %}{% endblock %}
        </section>
        {% block footer %}
            <!-- Footer -->
            <footer style="background: #002147; color: white; padding: 2rem; text-align: center;">
                <p> &copy;{{'now'|date('Y')}} Ahmadu Bello University - Computer Science Department</p>
            </footer>
        {% endblock %}
        {% block scripts_bottom %}

        {% endblock %}
        {% block js_bottom %}

        {% endblock %}
    </body>
</html>
